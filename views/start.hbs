<script>
function getFileName () {
let subm = document.getElementById('filesubm')
let file = document.getElementById ('uploaded-file').value
let spanName = document.getElementsByTagName('span')
file = file.replace(/\\/g, "/").split ('/').pop ()
spanName[0].textContent = "І'мя файла:"
subm.disabled = false
subm.style.cursor = "pointer";
document.getElementById ('file-name').innerHTML = file;
}
</script>
