<div class="container-form">
    <h1>Панель управління</h1>

    <div class="row">
        <div class="form-block form-admin-panel">
            <h2>Запис оплати</h2>
            <form action="/api/admin/writepaying" method="post" id="regform">
                    <input type="text" name="email" placeholder="Введить email юзера">
                    <input type="number" name="sumpay" placeholder="Введить суму оплати юзера">
                    <button type="submit">Вписати оплату</button>
            </form>
        </div>

        <div class="form-block  form-admin-panel">
            <h2>Знайти юзера</h2>
            <form action="/api/admin/finduser" method="post">
                <input type="text" name="email" placeholder="Введить email юзера">
                <button type="submit">Знайти</button>
            </form>
        </div>

        <div class="form-block  form-admin-panel">
            <h2>Історія оплат юзера</h2>
            <form action="/api/admin/finduserpayments" method="post">
                <input type="text" name="email" placeholder="Введить email юзера">
                <button type="submit">Знайти</button>
            </form>
        </div>

        <div class="form-block  form-admin-panel">
            <h2>Видалити користувача</h2>
            <form action="/api/admin/deleteuser" method="post">
                <input type="text" name="email" placeholder="Введить email юзера">
                <button type="submit" id="delus">Видалити</button>
            </form>
        </div>

        <div class="form-block  form-admin-panel">
            <h2>Лист про оплату</h2>
            <form action="/api/admin/sendendpay" method="post" id="regform1">
                <button type="submit">Нагадати про оплату</button>
            </form>
        </div>

        <div class="form-block  form-admin-panel">
            <h2>Вивести список користувачів</h2>
            <form action="/api/admin/users" method="post">
                {{!-- <input type="number" name="countuser" placeholder="Введить кількість користувачів"> --}}
                <button type="submit">Вивести</button>
            </form>
        </div>
    </div>
</div>

<script>
    const btnUserDel = document.getElementById('delus')
    btnUserDel.onclick = function (e) {
        if (!confirm(`Ви певні, що бажаєте видалити з бази даних цього користувача? 
            Після натиску кнопки "ok" всі данні користувача будуть видалені.` )
            ){
        e.preventDefault()
        }
    }
</script>
